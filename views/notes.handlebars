 <div class="container">
    <div class="header clearfix">
        <nav>
            <ul class="nav nav-pills float-right">
                <li class="nav-item">
                    <a class="nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
               
            </ul>
        </nav>
        <h3 class="text-muted">Mongo WebScraping</h3>
    </div>
 
 
 {{!--Display the scraped data--}}
  <div class="row">
    <h1><a href="{{result.link}}" target="_blank">{{result.title}}</a></h1>
    <p>{{result.summary}}</p>
  </div>
  <div class="row">
    <h2>Comments </h2>
  </div>
  {{!--If no notes then display the following  info--}}
  <div class="row">
    {{#unless result.note}}
    <p> No Comments so far. Add one !</p>
    {{/unless}}
  </div>
 
  <div class="row">
    <ul>
      {{#each result.note}}
      <li style="list-style: none">
        <h5>Name: {{this.name}} </h5>
        <p>Message: {{this.body}}</p>
        <button class="delete-button btn btn-secondary" data-comment="{{this._id}}">Delete Note</button>
      </li>
      {{/each}}
    </ul>
    
  </div>
  <div class="row">
    <h2>Say Something About This Article</h2>
  </div>
  {{!--Do a post method for the comment(s) a user adds and save it to the db--}}
  <form method="POST" action="/articles/{{result._id}}">
    <div class="form-group row">
      <label for="name" class="col-form-label">Name</label>
      <input class="form-control" type="text" name="name" id="name" required>
    </div>
    <div class="form-group row">
      <label for="body">Message</label>
      <textarea class="form-control" id="body" name="body" rows="3" required></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
  <br>
  <br>
  <br>
  <br>
  <footer class="footer">
    <div class="container">
      <p>&copy; News Scraper</p>
    </div>
  </footer>
</div>